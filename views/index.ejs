
<%- include('./partials/header') %>


<div class="bg-gray-100 min-h-screen font-sans mt-[-2rem]">
    <main>
       
        <section x-data="{ 
            currentSlide: 0,
            slides: [
                {
                    image: 'https://images.unsplash.com/photo-1548036328-c9fa89d128fa?q=80&w=3269&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
                    title: 'Discover Luxury Bags',
                    subtitle: 'Elevate your lifestyle with our curated collection',
                    cta: 'Shop Now'
                },
                {
                    image: 'https://images.unsplash.com/photo-1605733513597-a8f8341084e6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3269&q=80',
                    title: 'Elegant Watches',
                    subtitle: 'Timeless pieces for every occasion',
                    cta: 'Explore Collection'
                },
                {
                    image: 'https://images.unsplash.com/photo-1556306535-0f09a537f0a3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3270&q=80',
                    title: 'Premium Accessories',
                    subtitle: 'Complete your look with our exquisite accessories',
                    cta: 'Discover More'
                }
            ]
        }" class="relative overflow-hidden">
            <div class="relative h-[62rem]">
                <template x-for="(slide, index) in slides" :key="index">
                    <div x-show="currentSlide === index" 
                         x-transition:enter="transition ease-out duration-300"
                         x-transition:enter-start="opacity-0 transform translate-x-full"
                         x-transition:enter-end="opacity-100 transform translate-x-0"
                         x-transition:leave="transition ease-in duration-300"
                         x-transition:leave-start="opacity-100 transform translate-x-0"
                         x-transition:leave-end="opacity-0 transform -translate-x-full"
                         class="absolute inset-0 bg-cover bg-center"
                         :style="`background-image: url('${slide.image}')`">
                        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
                        <div class="container mx-auto text-center text-white relative z-10 h-full flex flex-col justify-center font-[Lato]">
                            <h1 class="text-5xl font-bold mb-6" x-text="slide.title"></h1>
                            <p class="text-xl mb-12" x-text="slide.subtitle"></p>
                            <div class="flex justify-center">
                                <a href="/shop" class="bg-white text-gray-800 py-6 px-12 rounded-full font-semibold hover:bg-gray-100 transition duration-300 text-lg font-[Lato]" x-text="slide.cta"></a>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
            
            <!-- Navigation Arrows -->
            <button @click="currentSlide = (currentSlide - 1 + slides.length) % slides.length" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-2 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 text-gray-800">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <button @click="currentSlide = (currentSlide + 1) % slides.length" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-2 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 text-gray-800">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
            
            <!-- Slide Indicators -->
            <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
                <template x-for="(slide, index) in slides" :key="index">
                    <button @click="currentSlide = index" 
                            :class="{'bg-white': currentSlide === index, 'bg-gray-400': currentSlide !== index}"
                            class="w-3 h-3 rounded-full focus:outline-none transition-colors duration-300"></button>
                </template>
            </div>
        </section>

        <!-- Featured Products Section -->
        <section class="bg-white py-16">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-light mb-12 text-center font-[Lato]">Featured Collection</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                    <% shopProduct.slice(0, 4).forEach(function(product) { %>
                        <div class="w-full group">
                            <div class="w-full h-64 flex items-center justify-center bg-[<%= product.bgcolor %>] overflow-hidden">
                                <img class="h-[12rem] transition-transform duration-300 group-hover:scale-110" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="<%= product.name %>">
                            </div>
                            <div class="flex justify-between bg-[<%= product.pannelcolor %>] items-center px-4 py-4 font-sans text-[<%= product.textcolor %>]">
                                <div>
                                    <h3 class="font-semibold"><%= product.name %></h3>
                                    <h4 class="mt-1">₹<%= product.price.toLocaleString('en-IN') %></h4>
                                </div>
                                <a class="w-10 h-10 flex items-center justify-center rounded-full bg-white hover:bg-gray-100 transition-colors duration-300" href="/addtocart/<%= product._id %>" aria-label="Add to cart">
                                    <i class="ri-add-line text-xl"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="text-center mt-12">
                    <a href="/shop" class="inline-block bg-black text-white px-8 py-3 rounded-full hover:bg-gray-800 transition-colors duration-300">View All Products</a>
                </div>
            </div>
        </section>

