<%- include('./partials/header') %>
<% if (error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 font-[Poppins]">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= Array.isArray(error) ? error[0] : error %>
        </span>
    </div>
<% } %>
<div class="bg-gray-100 min-h-screen font-[Poppins] flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">         
        <!-- Switch Toggle -->
        <div class="flex justify-center mb-4">
            <label for="toggle" class="inline-flex items-center cursor-pointer">
                <span class="mr-2 text-gray-700 font-semibold">User</span>
                <input type="checkbox" id="toggle" class="hidden" onchange="toggleRole()" <%= isOwnerAuth ? 'checked' : '' %>>
                <div class="w-12 h-6 rounded-full shadow-inner relative transition duration-300 peer 
                <%= isOwnerAuth ? 'bg-blue-500' : 'bg-gray-300' %>">
                <div class="absolute top-0.5 left-0.5 w-5 h-5 bg-white rounded-full shadow-md 
                    transition-transform duration-300 
                    <%= isOwnerAuth ? 'translate-x-6' : '' %>">
                </div>
            </div>
                <span class="ml-2 text-gray-700 font-semibold">Owner</span>
            </label>
        </div>
        <div class="w-full flex justify-between items-center px-10 py-5">
            <h3 class="text-2xl font-[Poppins]"><%= isOwnerAuth ? 'Owner Signup' : 'User Signup' %> to <span class="text-blue-400 font-semibold font-sans">Scatch</span></h3>
        </div>
        <form action="<%= isOwnerAuth ? '/owners/create' : '/users/register' %>" method="post">
            <div class="mb-4">
                <label for="fullname" class="block text-gray-700 font-semibold mb-2">Full Name</label>
                <input type="text" id="fullname" name="fullname" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <div class="mb-4">
                <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <div class="mb-6">
                <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
                <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <button type="submit" class="w-full bg-blue-400 text-white py-3 rounded-md font-semibold transition duration-300">Create Account</button>
        </form>
        <% if (!isOwnerAuth) { %>
            <div class="mt-6 text-center">
                <p>Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-600">Login</a></p>
            </div>
        <% } %>
    </div>
</div>
<%- include('./partials/footer') %>

<script>
    function toggleRole() {
        window.location.href = "<%= isOwnerAuth ? '/signup' : '/owners/signup' %>";
    }
</script>
